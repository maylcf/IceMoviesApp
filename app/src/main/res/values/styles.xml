<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DetailActivityLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="DetailActivityPoster">
        <item name="android:layout_width">@dimen/movie_detail_poster_width</item>
        <item name="android:layout_height">@dimen/movie_detail_poster_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/movie_poster</item>
    </style>

    <style name="DetailActivityContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_margin_start_text</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_margin_bottom_text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:text">-</item>
    </style>

    <style name="DetailActivityTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">@dimen/movie_detail_title_margin</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_title_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/movie_detail_title_size</item>
        <item name="android:text">-</item>
    </style>

</resources>
