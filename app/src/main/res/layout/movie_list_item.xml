<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/movies_list_padding"
    android:paddingLeft="@dimen/movies_list_padding"
    android:paddingRight="@dimen/movies_list_padding"
    android:paddingTop="@dimen/movies_list_padding">

    <ImageView
        android:id="@+id/movieThumbImage"
        android:src="@drawable/ic_noimage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/movieThumbImage"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Movie Title"/>

    <TextView
        android:id="@+id/movieDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/movieThumbImage"
        android:layout_below="@id/movieTitle"
        android:text="Movie Director"/>

    <TextView
        android:id="@+id/movieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/movieThumbImage"
        android:layout_below="@id/movieDirector"
        android:text="Movie Year"/>

</RelativeLayout>